@model JekShop.Models.RealEstate.RealEstateDetailsViewModel

<h1>Details</h1>

<div>
    <h4>Spaceship</h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Id)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="Area" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Area)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="Location" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Location)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="RoomNumber" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.RoomNumber)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="BuildingType" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.BuildingType)
        </div>
    </dl>


    <dl class="row">
        <div class="form-group row">
            <label asp-for="CreateAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.CreateAt)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.ModifiedAt)
        </div>
    </dl>

    @if (Model.Images != null && Model.Images.Any())
    {
        <div>
            @foreach (var photo in Model.Images)
            {
                <div style="margin-bottom: 15px;">
                    <img src="@photo.Image" alt="@photo.ImageTitle" style="max-width: 300px;" />
                    <p>@photo.ImageTitle</p>
                </div>
            }
        </div>
    }
    else
    {
        <p>No photos available.</p>
    }

    <a asp-action="Index" asp-controller="RealEstate" class="btn btn-secondary">Back</a>

</div>
