@model JekShop.Models.RealEstate.RealEstateCreateUpdateVeiwModel
@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}

<div>
    <form method="post" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden" />
    <input asp-for="CreateAt" type="hidden" />
    <input asp-for="ModifiedAt" type="hidden" />

    <div class="form-group row">
        <label asp-for="Area" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Area" class="form-control" />
        </div>
    </div>
            
    <div class="form-group row">
         <label asp-for="Location" class="col-sm-2 col-form-label"></label>
         <div class="col-sm-10">
             <input asp-for="Location" class="form-control" />
         </div>
    </div>

    <div class="form-group row">
         <label asp-for="RoomNumber" class="col-sm-2 col-form-label"></label>
         <div class="col-sm-10">
             <input asp-for="RoomNumber" class="form-control" />
         </div>
    </div>

    <div class="form-group row">
          <label asp-for="BuildingType" class="col-sm-2 col-form-label"></label>
          <div class="col-sm-10">
               <input asp-for="BuildingType" class="form-control" />
          </div>
    </div>

        <div class="form-group row">
            <label asp-for="Files" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Files" class="form-control" multiple type="file" />
                </div>
            </div>
        </div>


        @foreach (var images in Model.Images)
        {
            <partial name="_Images" model="images" />
            <input asp-action="removeImage" asp-controller="RealEstate" asp-route-imageId="@images.Id" type="submit" class="btn btn-outline-danger" value="Remove Image" />
            <br />
            <br />
        }


        @if (Model.Id.HasValue)
        {
            <input asp-action="update" asp-controller="RealEstate" type="submit" class="btn btn-primary" value="update" />
        }
        else
        {
            <input asp-action="create" asp-controller="RealEstate" type="submit" class="btn btn-primary" value="Create" />
        }
        <a asp-action="Index" asp-controller="RealEstate" class="btn btn-secondary">Back</a>


    </form>
</div>
