@model JekShop.Models.RealEstate.RealEstateCreateUpdateVeiwModel

@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}

<div>
    <form asp-action="@(Model.Id.HasValue ? "Update" : "Create")"
          asp-controller="RealEstate"
          method="post"
          enctype="multipart/form-data">

        <input asp-for="Id" type="hidden" />
        <input asp-for="CreateAt" type="hidden" />
        <input asp-for="ModifiedAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="Area" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Area" class="form-control" type="number" step="0.1" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Location" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Location" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="RoomNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="RoomNumber" class="form-control" type="number" step="1" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="BuildingType" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="BuildingType" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Files" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Files" class="form-control" multiple type="file" />
            </div>
        </div>

        <hr />

        <h3>Existing images</h3>
        @foreach (var img in Model.Images)
        {
            <partial name="_Images" model="img" />

            <button type="submit"
                    class="btn btn-outline-danger mb-3"
                    formmethod="post"
                    formaction="@Url.Action("RemoveImage", "RealEstate", new { imageId = img.Id })">
                Remove Image
            </button>

            <br />
            <br />
        }

        <div class="form-group row mt-4">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary me-2">
                    @(Model.Id.HasValue ? "Update" : "Create")
                </button>

                <a asp-action="Index" asp-controller="RealEstate" class="btn btn-secondary">
                    Back
                </a>
            </div>
        </div>

    </form>
</div>
