@{
    ViewData["Title"] = "Password reset link sent";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4" style="width: 420px; border-radius: 12px;">
        <h3 class="text-center text-success mb-3">Check your email 📩</h3>

        <p class="text-center">
            If an account with this email exists, we have sent a password reset link.
        </p>

        <div class="text-center mt-3">
            <a asp-action="Login" asp-controller="Accounts" class="btn btn-outline-secondary">Back to Login</a>
        </div>
    </div>
</div>
