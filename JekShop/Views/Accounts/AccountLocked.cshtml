@{
    ViewData["Title"] = "Account Locked";
    var minutes = ViewBag.RemainingMinutes as double?;
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4 text-center" style="max-width: 520px; border-radius: 14px;">
        <div class="mb-3">
            <span style="font-size: 56px;">🔒</span>
        </div>

        <h2 class="mb-3">Account temporarily locked</h2>

        <p class="text-muted mb-3">
            Too many failed login attempts.
        </p>

        @if (minutes != null)
        {
            <p class="fw-bold text-danger">
                Please try again in approximately @minutes minute(s).
            </p>
        }
        else
        {
            <p class="fw-bold text-danger">
                Please try again later.
            </p>
        }

        <div class="d-grid gap-2 mt-4">
            <a asp-controller="Accounts" asp-action="Login" class="btn btn-outline-primary">
                Back to Login
            </a>

            <a asp-controller="Accounts" asp-action="ForgotPassword" class="btn btn-outline-secondary">
                Forgot password
            </a>

            <a asp-controller="Home" asp-action="Index" class="btn btn-link">
                Go to Home
            </a>
        </div>
    </div>
</div>
