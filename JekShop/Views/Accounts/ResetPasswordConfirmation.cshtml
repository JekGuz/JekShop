@{
    ViewData["Title"] = "Password changed";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4" style="width: 420px; border-radius: 12px;">
        <h3 class="text-center text-success mb-3">
            Your password has been reset ✅
        </h3>

        <div class="text-center mt-3">
            <a asp-action="Login" asp-controller="Accounts" class="btn btn-outline-info">
                Go to Login
            </a>
        </div>
    </div>
</div>
