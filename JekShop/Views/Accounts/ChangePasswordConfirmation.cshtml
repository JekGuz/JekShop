@{
    ViewData["Title"] = "Password Changed";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4 text-center" style="max-width: 480px; border-radius: 14px;">

        <div class="mb-3">
            <span style="font-size: 48px;">✅</span>
        </div>

        <h2 class="mb-3">Password Updated</h2>

        <p class="text-muted mb-4">
            Your password has been changed successfully.
            <br />
            Please use your new password next time you sign in.
        </p>

        <div class="d-grid gap-2">
            <a asp-controller="Home"
               asp-action="Index"
               class="btn btn-outline-info">
                Go to Home
            </a>

            <a asp-controller="Accounts"
               asp-action="ChangePassword"
               class="btn btn-outline-warning">
                Change Again
            </a>
        </div>
    </div>
</div>