@{
    ViewData["Title"] = "Cocktails";
}

<h2 class="mb-2">Find a cocktail</h2>
<p class="text-muted">Try: <em>margarita</em>, <em>mojito</em>, <em>negroni</em>, <em>martini</em>…</p>

<!-- любой ваш контент сверху страницы -->

<div class="mt-5 pt-4 border-top">
    <form asp-action="Search" method="post" class="row g-2 justify-content-center">
        <div class="col-md-6">
            <input name="name"
                   class="form-control form-control-lg"
                   placeholder="Search cocktails…" />
        </div>
        <div class="col-md-3 col-sm-4">
            <button type="submit" class="btn btn-primary w-100 btn-lg">Search</button>
        </div>
    </form>
</div>
