@model JekShop.Models.ChuckJoke.ChuckJokeModel

@{
    ViewData["Title"] = "Chuck Norris Jokes";
}

<h2 class="mb-4 text-center">😂 Random Chuck Norris Joke</h2>

<div class="p-4 mx-auto" style="max-width: 700px;">
    <div class="d-flex align-items-center mb-3">
        <img src="@Model.IconUrl" alt="icon" width="50" height="50" class="me-3 rounded-circle" />
        <small class="text-muted">ID: @Model.Id</small>
    </div>

    <p class="fs-5 mb-3">@Model.Value</p>

    @if (!string.IsNullOrEmpty(Model.Url))
    {
        <a href="@Model.Url" target="_blank" rel="noopener" class="btn btn-success w-100 mb-2 fw-bold">
            🔗 View Original
        </a>
    }

    <form asp-action="NewJoke" method="post" class="mb-2">
        <button type="submit" class="btn btn-success w-100 fw-bold">
            😂 Another One!
        </button>
    </form>

    <a asp-action="Index" asp-controller="Home" class="btn btn-warning w-100 fw-bold">
        Back
    </a>
</div>
