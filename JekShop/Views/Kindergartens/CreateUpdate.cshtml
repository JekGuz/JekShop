@model JekShop.Models.Kindergartens.KindergartenCreateUpdateVeiwModel

@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}

<div>
    <!-- Основная форма создания/обновления -->
    <form asp-action="@(Model.Id.HasValue ? "Update" : "Create")"
          asp-controller="Kindergartens"
          method="post"
          enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <input asp-for="Id" type="hidden" />
        <input asp-for="CreateAt" type="hidden" />
        <input asp-for="UpdateAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="GroupName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="GroupName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ChildrenCount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ChildrenCount" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="KindergartenName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="KindergartenName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="TeacherName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="TeacherName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Files" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Files" class="form-control" multiple type="file" />
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">
            @(Model.Id.HasValue ? "Update" : "Create")
        </button>
        <a asp-action="Index" asp-controller="Kindergartens" class="btn btn-secondary">Back</a>
    </form>

    <!-- Секция с уже загруженными изображениями + отдельные формы удаления -->
    @if (Model.Images != null && Model.Images.Any())
    {
        <hr />
        @foreach (var images in Model.Images)
        {
            <div class="mb-3">
                <partial name="_Images" model="images" />

                <form asp-action="RemoveImage"
                      asp-controller="Kindergartens"
                      asp-route-imageId="@images.Id"
                      method="post"
                      class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger">
                        Remove Image
                    </button>
                </form>
            </div>
        }
    }
</div>