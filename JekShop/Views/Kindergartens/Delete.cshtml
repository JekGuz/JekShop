@model JekShop.Models.Kindergartens.KindergartenDeleteViewModel

<h1>Delete</h1>

<div>
    <h4>Spaceship</h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Id)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="GroupName" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.GroupName)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="ChildrenCount" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.ChildrenCount)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="KindergartenName" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.KindergartenName)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="TeacherName" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.TeacherName)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="CreateAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.CreateAt)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="UpdateAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.UpdateAt)
        </div>
    </dl>

    @foreach (var images in Model.Images)
    {
        <partial name="_Images" model="images" />
        <br />
    }
    <form asp-action="DeleteConfirmation">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger m-2" />
        <a asp-action="Index" asp-controller="kindergartens" class="btn btn-secondary m-2">Back</a>
    </form>
</div>
