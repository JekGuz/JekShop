@model JekShop.Models.OpenWeather.OpenWeatherViewModel
@{
    ViewData["Title"] = "OpenWeather – " + (Model?.City ?? "");
    var unitSign = Model?.Units == "imperial" ? "°F" : "°C";
}

<a asp-action="Index" class="btn btn-secondary mb-3">← Back</a>

@if (Model is null)
{
    <p>No data.</p>
}
else
{
    <div class="container">
        <h2>Forecast for the selected city</h2>
        <h2>
            @Model.City @(!string.IsNullOrEmpty(Model.Country) ? $"({Model.Country})" : "")
        </h2>
        <hr />

        <div class="card shadow-sm" style="max-width: 560px;">
            <div class="card-body d-flex align-items-center">
                @if (!string.IsNullOrWhiteSpace(Model.IconUrl))
                {
                    <img src="@Model.IconUrl" alt="icon" class="me-3" />
                }
                <div>
                    <div class="fs-3 mb-1">
                        @Model.Temp?.ToString("0.#")@unitSign — @Model.Description
                    </div>
                    <div class="text-muted">
                        Feels like: @Model.FeelsLike?.ToString("0.#")@unitSign<br />
                        Humidity: @Model.Humidity%<br />
                        Wind: @Model.WindSpeed m/s
                    </div>
                </div>
            </div>
        </div>
    </div>
}
